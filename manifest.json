{
  "manifest_version": 3,
  "name": "Text Converter",
  "version": "1.1",
  "description": "Convert highlighted input text to various formats",
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
